<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="clubSearch">

<!-- 동아리 검색결과 list관련 -->
	<sql id="where-list">
	  <if test="sido.length()!=0 and addr.length()==0">
	      DBMS_LOB.INSTR(clubAddr,#{sido}) &gt; 0 
	  </if>
	  <if test="sido.length()!=0 and addr.length()!=0">
	      DBMS_LOB.INSTR(clubAddr,#{sido}) &gt; 0 AND
	      DBMS_LOB.INSTR(clubAddr,#{addr}) &gt; 0
	  </if>
	   <if test="clubType=='disabled'">
	     subject='장애인'
	  </if>
	  <if test="clubType=='silver'">
	      subject='노인'
	  </if>
	  <if test="clubType=='child'">
	     subject='아동'
	  </if>
	  <if test="clubType=='etc'">
	     subject='기타'
	  </if>
	  <if test="clubName.length()!=0">
	      DBMS_LOB.INSTR(clubName, #{clubName}) &gt; 0 
	  </if>
	</sql>
	
		
<!-- 동아리 검색 결과 dataCount-->
<select id="clubSearchdataCount" parameterType="map"
	            resultType="Integer">
	  SELECT NVL(COUNT(*), 0) FROM clubinfo c JOIN theme t ON c.themenum=t.themenum
	     <where>
	     	<if test="clubType!=null or clubName!=null or sido!=null">
	     	    <include refid="where-list"/>
	     	</if>
	     </where>   
	</select>
	
	
	
<!-- 동아리 검색 결과 리스트 -->
	<select id="clubSearchList" parameterType="map"
	            resultType="com.bong.club.ClubInfo">
		  SELECT * FROM (
		    SELECT ROWNUM rnum, tb.* FROM (
			      SELECT clubIdx as clubSeq,clubname,clubAddr ,subject AS themeName
					FROM clubInfo c JOIN theme t ON c.themenum=t.themenum
	             <where>
	     	<if test="clubType!=null or clubName!=null or sido!=null">
	     	    <include refid="where-list"/>
	     	</if>
	     </where>   
	                ORDER BY clubIdx DESC
	<![CDATA[
	        ) tb WHERE ROWNUM <= #{end}
	    ) WHERE rnum >= #{start}
	]]>
	</select>
	
</mapper>